      <ul>
      <% lecture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :lecture_content, :class => 'ckeditor' %>
  </div>

  <div class="field">
    <%= form.label :attachment %>
    <%= form.file_field :attachment %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select :course_id, Course.all.collect { |course| [ course.title, course.id] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
