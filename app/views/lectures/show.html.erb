<% else %>
<%= link_to 'Like', like_unlike_lecture_path(@lecture),:method => :post %> 
<% end %>

<%= @lecture.get_likes.size  %>

<ul>
  <% @comments.each do |comment| %>
    <li><%= comment.text %></li>
  <% end %>
</ul>

<%= render 'comment_form', lecture: @lecture %>

